doctype html
html
  head
  title Future.Speckle: Display and explore parametric models in your browser.  
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css')
  link(rel="stylesheet", href="css/SPKSingle.css")
  script(src="js/SPKSingle.js")
  block header

body

  #spk-viewer
    
    #spk-left-ui
      #spk-metadata.text-center
       
        h2 #[strong.model-name ]
        p.model-meta.blue
        p.model-comments
      #main-wrapper
        #wrapper-params.text-center
          #spk-sliders
          
          p #[a(href="http://beta.speckle.xyz") beta.speckle.xyz]
    

    #spk-save-controls.hide-right.controls
      i.fa.fa-copy 
    #spk-save-ui.hide-right-ui.add-shadow

      #wrapper-saver.wrapper
        div.instance-element
          form#save-instance
            textarea(placeholder="To save a configuration, give it a description and hit enter." rows=3)
        br
        #instance-list

    #spk-measures-controls.hide-right.controls
      i.fa.fa-area-chart
    #spk-measures-ui.hide-right-ui.add-shadow
      #main-wrapper.wraper.wrapper-measures
        #wrapper-measures
           //h3.text-center
            i.fa.fa-area-chart

    #spk-settings-controls.hide-right.controls
      i.fa.fa-cogs
    #spk-settings-ui.hide-right-ui.add-shadow
      #wrapper-saver.wrapper
        #instance-list
          div.instance-element.toggle-grid
            p.description Toggle Grid 
            p Keyboard shortcut: (g)
          div.instance-element.toggle-plane
            p.description Toggle Ground Plane
            p Keyboard shortcut: (p)
          div.instance-element.toggle-shadows
            p.description Toggle Shadows
            p Keyboard shortcut: (s)
          div.instance-element.toggle-zoom
            p.description Zoom All
            p Keyboard shortcut: (e)

  
    #spk-canvas
    
 

  